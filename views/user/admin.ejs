<main ng-app="user" ng-controller="userController">
  <section class="main strict">
    <header class="np-main-header">
      <div class="row-fluid show-grid">
        <span class="section-title">Users <span class="user-count">(13)</span></span>
        <button class="np-button pull-right input-medium button-new" ng-click="showAddUser()"><%= __('New User') %></button>
        <input type="text" class="np-input input-medium pull-right" placeholder="<%= __('Name, ID or Service') %>" >
      </div>
      <div class="row-fluid show-grid crud-column-title">
        <div class="col-md-1"><span><%= __('Status') %></span></div>
        <div class="col-md-5"><span><%= __('Name') %></span></div>
        <div class="col-md-4"><span><%= __('Services') %></span></div>
        <div class="col-md-1 text-right"><span><%= __('Edit') %></span></div>
        <div class="col-md-1 text-right"><span><%= __('Delete') %></span></div>
      </div>
    </header>
    <div id="user-crud" class="np-crud is-hides">
      <div class="row-fluid np-crud-row user-row" ng-repeat="user in users">
        <div class="col-md-1">
          <div class="user-status status-{{user.active ? 'active' : 'inactive'}}"></div>
        </div>
        <div class="col-md-5">
          <div class="row-fluid"><span class="user-name">{{user.name}}</span></div>
          <div class="row-fluid"><span class="user-title">{{user.title}}</span></div>
        </div>
        <div class="col-md-4">
          <div class="user-services">
            <i class="material-icons" style="color: red">local_hospital</i>
            <i class="material-icons"  style="color: grren">local_hospital</i>
            <i class="material-icons" style="color: blue">local_hospital</i>
          </div>
        </div>
        <div class="col-md-1 text-right">
          <span class="edit edit-user "><i class="material-icons">mode_edit</i></span>
        </div>
        <div class="col-md-1 text-right">
          <span class="delete delete-user "><i class="material-icons">delete</i></span>
        </div>
      </div>
    </div>
  </section>
  <section class="helper strict">
    <div class="container-fluid" ng-class="showAddUserClass">
      <form action="/user/create" id="form-add-user">
        <div class="fluid-row">
          <div class="col-md-12">
            <input type="text" class="np-input" placeholder="<%= __('Name') %>">
          </div>
        </div>
        <div class="fluid-row">
          <div class="col-md-2 text-right">
            <input id="cb-user-active" type="checkbox" class="np-input">
          </div>
          <div class="col-md-2 text-right">
            <label for="cb-user-active"><%= __('Active') %></label>
          </div>
          <div class="col-md-8">
            <select id="select-user-title">
              <option ng-repeat="title in titles" value="{{title.id}}">{{title.name}}</option>
            </select>
          </div>
        </div>
        <div class="fluid-row">
          
        </div>
      </form>
    </div>
    <%- include ../imports/app-nav-bar.ejs %>
  </section>
</main>

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
<script src="/js/user/app.js"></script>